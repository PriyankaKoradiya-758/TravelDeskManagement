@model TravelDeskManagement.DTOs.AddTravelRequest
@using TravelDeskManagement.Helpers
@{
    ViewData["Title"] = "Edit Travel Request";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card shadow-lg">
            <div class="card-header ">
                <h5 class="mb-0">Edit Travel Request</h5>
            </div>

            <div class="card-body">
                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="RequestId" />

                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label"></label>
                        <select asp-for="EmployeeId"
                                class="form-select"
                                asp-items="ViewBag.EmployeeId">
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Purpose" class="form-label"></label>
                        <select asp-for="Purpose"
                                class="form-select"
                                asp-items="ViewBag.PurposeList"
                                id="purposeDropdown">
                        </select>
                        <span asp-validation-for="Purpose" class="text-danger"></span>
                    </div>

                    <div class="mb-3 @(Model.Purpose == TravelPurpose.Other ? "" : "d-none")"
                         id="otherPurposeDiv">

                        <label asp-for="OtherPurpose" class="form-label">Specify Purpose</label>
                        <input asp-for="OtherPurpose" class="form-control" />
                        <span asp-validation-for="OtherPurpose" class="text-danger"></span>
                    </div>


                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TravelFrom" class="form-label"></label>
                            <input asp-for="TravelFrom" class="form-control" />
                            <span asp-validation-for="TravelFrom" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TravelTo" class="form-label"></label>
                            <input asp-for="TravelTo" class="form-control" />
                            <span asp-validation-for="TravelTo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartureDate" class="form-label"></label>
                            <input asp-for="DepartureDate" type="date" class="form-control"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DepartureDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ReturnDate" class="form-label"></label>
                            <input asp-for="ReturnDate" type="date" class="form-control" 
                            min="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                            <span asp-validation-for="ReturnDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            ← Back
                        </a>

                        <button type="submit" class="btn btn-secondary px-4">
                            Save Changes
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<script>
    const purposeDropdown = document.getElementById("purposeDropdown");
    const otherDiv = document.getElementById("otherPurposeDiv");
    const otherInput = document.getElementById("OtherPurpose");

    function toggleOtherPurpose() {
        if (purposeDropdown.value === "99") {
            otherDiv.classList.remove("d-none");
        } else {
            otherDiv.classList.add("d-none");
            otherInput.value = "";
        }
    }

    toggleOtherPurpose();

    purposeDropdown.addEventListener("change", toggleOtherPurpose);
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
