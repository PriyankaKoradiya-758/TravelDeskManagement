@model TravelDeskManagement.DTOs.AddTravelRequest

@{
    ViewData["Title"] = "Create Travel Request";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card shadow-lg">
            <div class="card-header ">
                <h5 class="mb-0">Add New Travel Request</h5>
            </div>

            <div class="card-body">
                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label"></label>
                        <select asp-for="EmployeeId"
                                class="form-select"
                                asp-items="ViewBag.EmployeeId">
                            <option value="">-- Select Employee --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Purpose" class="form-label"></label>
                        <select asp-for="Purpose"
                                class="form-select"
                                asp-items="ViewBag.PurposeList"
                                id="purposeDropdown">
                            <option value="">-- Select Purpose --</option>
                        </select>
                        <span asp-validation-for="Purpose" class="text-danger"></span>
                    </div>

                    <div class="mb-3 d-none" id="otherPurposeDiv">
                        <label asp-for="OtherPurpose" class="form-label">Specify Purpose</label>
                        <input asp-for="OtherPurpose" class="form-control" />
                        <span asp-validation-for="OtherPurpose" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TravelFrom" class="form-label"></label>
                            <input asp-for="TravelFrom" class="form-control" placeholder="India" />
                            <span asp-validation-for="TravelFrom" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TravelTo" class="form-label"></label>
                            <input asp-for="TravelTo" class="form-control" placeholder="United States" />
                            <span asp-validation-for="TravelTo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartureDate" class="form-label"></label>
                            <input asp-for="DepartureDate" type="date" class="form-control"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DepartureDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ReturnDate" class="form-label"></label>
                            <input asp-for="ReturnDate" type="date" class="form-control"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="ReturnDate" class="text-danger"></span>
                        </div>
                    </div>

                    @* Status is auto-managed *@
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <input class="form-control" value="Pending" disabled />
                        <input type="hidden" asp-for="Status" value="Pending" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            ← Back
                        </a>

                        <button type="submit" class="btn btn-secondary px-4">
                            Submit Request
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<script>
    document.getElementById("purposeDropdown").addEventListener("change", function () {
        const otherDiv = document.getElementById("otherPurposeDiv");
        const selectedValue = this.value;

        if (selectedValue == "99") {
            otherDiv.classList.remove("d-none");
        } else {
            otherDiv.classList.add("d-none");
            document.getElementById("OtherPurpose").value = "";
        }
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
