@model TravelDeskManagement.Models.TravelRequest
@using TravelDeskManagement.Helpers

@{
    ViewData["Title"] = "Travel Request Details";
}

<div class="row justify-content-center">
    <div class="col-md-7">

        <div class="card shadow-lg">
            <div class="card-header ">
                <h5 class="mb-0">Travel Request Details</h5>
            </div>

            <div class="card-body">

                <dl class="row mb-0">

                    <dt class="col-sm-4">Employee</dt>
                    <dd class="col-sm-8">
                        @Model.Employee?.FullName
                    </dd>

                    <dt class="col-sm-4">Purpose</dt>
                    <dd class="col-sm-8">
                        @Model.GetPurposeDisplay()
                    </dd>

                    <dt class="col-sm-4">Travel From</dt>
                    <dd class="col-sm-8">
                        @Model.TravelFrom
                    </dd>

                    <dt class="col-sm-4">Travel To</dt>
                    <dd class="col-sm-8">
                        @Model.TravelTo
                    </dd>

                    <dt class="col-sm-4">Departure Date</dt>
                    <dd class="col-sm-8">
                        @Model.DepartureDate.ToString("dd-MMM-yyyy")
                    </dd>

                    <dt class="col-sm-4">Return Date</dt>
                    <dd class="col-sm-8">
                        @Model.ReturnDate.ToString("dd-MMM-yyyy")
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.Status == TravelRequestStatus.Approved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (Model.Status == TravelRequestStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </dd>

                </dl>

            </div>

            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← Back to List
                </a>

                <a asp-action="Edit"
                   asp-route-id="@Model.RequestId"
                   class="btn btn-secondary">
                    Edit Request
                </a>
            </div>
        </div>

    </div>
</div>
