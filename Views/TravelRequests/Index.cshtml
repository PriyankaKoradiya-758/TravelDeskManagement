@model IEnumerable<TravelDeskManagement.Models.TravelRequest>
@using TravelDeskManagement.Helpers

@{
    ViewData["Title"] = "Travel Requests";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Travel Requests</h3>
    <a asp-action="Create" class="btn btn-secondary">
        + Create New
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Purpose</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Departure</th>
                    <th>Return</th>
                    <th>Status / Action</th>
                    <th>Employee</th>
                    <th class="text-center" style="width: 180px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.GetPurposeDisplay()
                        </td>
                        <td>@item.TravelFrom</td>
                        <td>@item.TravelTo</td>
                        <td>@item.DepartureDate.ToString("dd-MMM-yyyy")</td>
                        <td>@item.ReturnDate.ToString("dd-MMM-yyyy")</td>

                        <td>
                            @if (item.Status == TravelRequestStatus.Pending)
                            {
                                <form asp-action="Approve" asp-route-id="@item.RequestId" method="post" class="d-inline">
                                    <button class="btn btn-sm btn-success">Approve</button>
                                </form>

                                <form asp-action="Reject" asp-route-id="@item.RequestId" method="post" class="d-inline">
                                    <button class="btn btn-sm btn-danger">Reject</button>
                                </form>
                            }
                            else
                            {
                                <span class="badge @(item.Status == TravelRequestStatus.Approved ? "bg-success" : "bg-danger")">
                                    @item.Status
                                </span>
                            }
                        </td>

                        <td>
                            @item.Employee?.FullName
                        </td>

                        <td class="text-center  d-flex gap-2">
                            <a asp-action="Edit"
                               asp-route-id="@item.RequestId"
                               class="btn btn-sm btn-outline-secondary">
                                Edit
                            </a>

                            <a asp-action="Details"
                               asp-route-id="@item.RequestId"
                               class="btn btn-sm btn-outline-secondary">
                                Details
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.RequestId"
                               class="btn btn-sm btn-secondary">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                No travel requests found.
            </div>
        }

    </div>
</div>
